<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tool"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingTop="20dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.example.a10075.NavgationDrawer.Tools.ToolsActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/bttool1"
            android:layout_width="165dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:layout_marginRight="13dp"
            android:background="@drawable/acompile"
            android:text="编译工具箱" />

        <ImageButton
            android:id="@+id/bttool2"
            android:layout_width="165dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:layout_marginLeft="13dp"
            android:background="@drawable/fanyi"
            android:text="翻译" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageButton
            android:layout_marginTop="10dp"
            android:id="@+id/bttool3"
            android:layout_width="165dp"
            android:layout_height="105dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:background="@drawable/acolorwall"
            android:text="配色墙" />

        <ImageButton
            android:layout_marginTop="10dp"
            android:id="@+id/bttool4"
            android:layout_width="165dp"
            android:layout_height="105dp"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:background="@drawable/acalculator"
            android:text="计算器" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <ImageButton
            android:layout_marginTop="10dp"
            android:id="@+id/bttool5"
            android:layout_width="165dp"
            android:layout_height="105dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:background="@drawable/alogistics"
            android:text="物流查询" />

        <ImageButton
            android:layout_marginTop="10dp"
            android:id="@+id/bttool6"
            android:layout_width="165dp"
            android:layout_height="105dp"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:background="@drawable/arandom"
            android:text="随机数" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:layout_marginTop="10dp"
            android:id="@+id/bttool7"
            android:layout_width="165dp"
            android:layout_height="105dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:background="@drawable/acompass"
            android:text="指南针" />

        <ImageButton
            android:layout_marginTop="10dp"
            android:id="@+id/bttool8"
            android:layout_width="165dp"
            android:layout_height="105dp"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:background="@drawable/aocr"
            android:text="ocr识别" />
    </LinearLayout>

</LinearLayout>